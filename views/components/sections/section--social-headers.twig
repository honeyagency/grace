<!-- Facebook -->
<meta name="description" content="{% block page_desc %}{{post.content|striptags}}{% endblock %}">
<meta property="og:title" content="{% block fb_title %}{% if post.title %}{{post.title}} | {% endif %}{{site.name}}{% endblock %}"/>
<meta property="og:description" content="{% block fb_desc %}{{post.content|striptags}}{% endblock %}"/>
<meta property="og:image" content="{% block fb_img %}{{assets}}/social.png{% endblock %}"/>
<meta property="og:url" content="{% if post.permalink %}{{post.permalink}}{% else %}{{currentPermalink}}{% endif %}"/>
<meta property="og:site_name" content="{{site.name}}"/>

<!-- Twitter -->
<meta name="twitter:card" content="{% block tw_card %}summary{% endblock %}">
<meta name="twitter:url" content="{% block tw_url %}{% if post.permalink %}{{post.permalink}}{% else %}{{currentPermalink}}{% endif %}{% endblock %}">
<meta name="twitter:title" content="{% block tw_title %}{% if post.title %}{{post.title}} | {% endif %}{{site.name}}{% endblock %}">
<meta name="twitter:description" content="{% block tw_desc %}{{post.content|striptags}}{% endblock %}">
<meta name="twitter:image" content="{% block tw_img %}{{assets}}/social.png{% endblock %}">